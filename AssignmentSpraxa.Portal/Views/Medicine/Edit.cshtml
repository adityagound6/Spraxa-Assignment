@using AssignmentSpraxa.Portal.DTO
@model MedicineDto

@{
    ViewData["Title"] = "Medicine Management";
    var isAdmin = User.IsInRole("Admin");
}
<h2>Edit Medicine</h2>
<div class="main-contain-data">
    <form asp-action="Edit" method="post" id="medicineForm">
        <!-- Display all model errors at top -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="MedicineId" />
        <div class="form-group mb-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Company"></label>
            <input asp-for="Company" class="form-control" required />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="ExpiryDate"></label>
            <input asp-for="ExpiryDate" type="date" class="form-control" required />
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" type="number" class="form-control" required />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <br />

        <button type="submit" class="btn btn-primary">Save Medicine</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <!-- Required for client-side validation -->
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Remove validation error when user starts typing
        document.querySelectorAll('#medicineForm input').forEach(function (input) {
            input.addEventListener('input', function () {
                let span = this.nextElementSibling;
                if (span && span.classList.contains('text-danger')) {
                    span.innerText = '';
                }
            });
        });
    </script>
}
