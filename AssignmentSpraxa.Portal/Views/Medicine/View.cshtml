@using AssignmentSpraxa.Portal.DTO
@model MedicineDto

@{
    ViewData["Title"] = "Medicine Management";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="main-contain-data">
    <h2>View Medicine</h2>
    @{
        if (isAdmin)
        {
            <a class="btn btn-primary" asp-action="Edit" asp-controller="Medicine" asp-route-id="Model.Id">
                <i class="fas fa-plus"></i> Edit Medicine
            </a>
        }
    }
    <form>

        <input type="hidden" asp-for="MedicineId" />

        <div class="form-group mb-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>

        <div class="form-group mb-2">
            <label asp-for="Company"></label>
            <input asp-for="Company" class="form-control" disabled />
        </div>

        <div class="form-group mb-2">
            <label asp-for="ExpiryDate"></label>
            <input asp-for="ExpiryDate" type="date" class="form-control" disabled />
        </div>

        <div class="form-group mb-2">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" type="number" class="form-control" disabled />
        </div>

        <div class="form-group mb-2">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" disabled />
        </div>

        <br />

        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
<script>
    $(document).ready(function () {
        $("#medicineForm input").attr("disabled", true);
    });
</script>