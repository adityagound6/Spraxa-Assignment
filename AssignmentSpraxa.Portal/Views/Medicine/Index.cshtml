@using AssignmentSpraxa.Portal.DTO
@model List<MedicineDto>

@{
    ViewData["Title"] = "Medicine Management";
    var isAdmin = User.IsInRole("Admin");
}

<div class="main-contain-data" id="appointments">
    <div class="section-header">
        <h2>Medicine Management</h2>
        @{
            if (isAdmin)
            {

                <a class="btn btn-primary" asp-action="Create" asp-controller="Medicine">
                    <i class="fas fa-plus"></i> Add Medicine
                </a>
            }
        }
    </div>

    <div class="table-container">
        <div class="table-header">
            <div class="search-filter">
                <input type="text" placeholder="Search medicine..." id="appointmentSearch">
                @* <select id="appointmentFilter">
                    <option value="">All</option>
                    <option value="inStock">In Stock</option>
                    <option value="expired">Expired</option>
                </select> *@
            </div>
        </div>

        <table class="data-table" id="appointmentsTable">
            <thead>
                <tr>
                    <th>Medicine ID</th>
                    <th>Name</th>
                    <th>Company</th>
                    <th>Expiry Date</th>
                    <th>Stock</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.MedicineId</td>

                        <td>
                            <div class="patient-cell">
                                <span>@m.Name</span>
                            </div>
                        </td>

                        <td>@m.Company</td>
                        <td>@m.ExpiryDate.ToShortDateString()</td>
                        <td>@m.Stock</td>
                        <td>@m.Price</td>

                        <td>
                            <div class="action-buttons">
                                <a class="btn-icon" asp-controller="Medicine" asp-action="View" asp-route-id="@m.MedicineId" title="View"><i class="fas fa-eye"></i></a>

                                @{
                                    if (isAdmin)
                                    {
                                        <a class="btn-icon" asp-controller="Medicine" asp-action="Edit" asp-route-id="@m.MedicineId" title="Edit"><i class="fas fa-edit"></i></a>
                                        <a class="btn-icon delete" title="Delete" onclick="openDeleteModal('@m.MedicineId')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="deleteId" name="id" />
                    <button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
        $(document).ready(function () {

            $("#appointmentSearch").on("keyup", function () {
                let term = $(this).val();

                $.ajax({
                    url: "/Medicine/Search",
                    type: "GET",
                    data: { term: term },
                    success: function (response) {

                        // Replace table body with result
                        $("#appointmentsTable tbody").html(response);

                        // If empty → show 'No data found'
                        if ($("#appointmentsTable tbody tr").length === 0) {
                            $("#appointmentsTable tbody").html(`
                                <tr>
                                    <td colspan="7" class="text-center">No data found</td>
                                </tr>
                            `);
                        }
                    }
                });
            });

    });

    function openDeleteModal(id) {
        document.getElementById('deleteId').value = id;

        var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }
</script>
