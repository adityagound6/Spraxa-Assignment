@using AssignmentSpraxa.Portal.Models
@model LoginRequest

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 col-md-4">
    <h3>Login</h3>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post">
        <input type="text" name="UserNameOrEmail" class="form-control mb-3" placeholder="Email or Username" required />
        <input type="password" name="Password" class="form-control mb-3" placeholder="Password" required />

        <button class="btn btn-primary w-100">Login</button>

        @* <a href="/Auth/GoogleLogin" class="btn btn-danger w-100 mt-3">
            <i class="fab fa-google"></i> Login with Google
        </a> *@
    </form>
    <a asp-action="Register" asp-controller="Auth" class="d-block mt-3">Don't have an account? Register</a>
</div>